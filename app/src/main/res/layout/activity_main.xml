<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="edu.maine.seamans.ratemyairport.MainActivity">

    <TextView
        android:id="@+id/titleTextLat"
        android:layout_width="match_parent"
        android:layout_height="23dp"
        android:layout_centerHorizontal="true"
        android:text="LATITUDE"
        android:textAlignment="center"
        android:textSize="18sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/titleTextLon"
        android:layout_width="match_parent"
        android:layout_height="22dp"
        android:layout_centerHorizontal="true"
        android:text="LONGITUDE"
        android:textAlignment="center"
        android:textSize="18sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/titleTextLat" />

    <Button
        android:id="@+id/btnSendCoords"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="0dp"
        android:text="Find Airports"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <ListView
        android:id="@+id/listview"
        android:layout_width="match_parent"
        android:layout_height="369dp"
        app:layout_constraintBottom_toTopOf="@+id/btnSendCoords"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/titleTextLon" />


</android.support.constraint.ConstraintLayout>
